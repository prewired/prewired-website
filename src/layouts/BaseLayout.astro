---
import { Image } from "astro:assets";
import "@fontsource-variable/open-sans";
import "@fontsource-variable/open-sans/wght-italic.css";
import "../styles/global.css";
import prewiredLogoText from "@assets/logos/prewired-logo-text.png";
import oscr from "@assets/logos/oscr.jpg";


interface Props {
	title: string;
}

const { title } = Astro.props;

const navItems = [
	{ href: "/news", title: "News" },
	{ href: "/attending", title: "Attending" },
	{ href: "/resources", title: "Resources" },
	{ href: "/volunteering", title: "Volunteering" },
	{ href: "/support", title: "Support us" },
	{ href: "/about", title: "About" },
	{ href: "/contact", title: "Contact" },
];
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<!--<meta name="description" content="Astro description" />-->
		<meta name="generator" content={Astro.generator} />
		<title>{`Prewired | ${title}`}</title>
	</head>
	<body class="bg-linear-[170deg,#EDFCFF,#FAF6FE_200px,#FFF0F3_400px,white_600px]">
		<header class="w-full">
			<nav class="h-32 py-4 pl-8 w-full max-w-screen-xl mx-auto flex items-center">
				<a href="/" class="mr-auto hover:opacity-70 transition">
					<Image
						src={prewiredLogoText}
						alt="The Prewired logo"
						class="w-52 pb-6"
					/>
				</a>
				{ navItems.map(({ href, title }) => (
					<a href={href} class={`mr-10 text-lg text-black no-underline ${href === Astro.url.pathname ? "font-bold" : "hover:text-purple-600"}`}>
						{ title }
					</a>
				))}
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer class="w-full mt-20 bg-purple-600 rounded-t-[0.625rem]">
			<div class="w-full pt-8 pb-12 bg-purple-50 rounded-lg">
				<div class="w-full max-w-screen-xl mx-auto flex">
					<div class="flex-1/3">
						<Image
							src={prewiredLogoText}
							alt="The Prewired logo"
							class="w-60"
						/>
					</div>
					<div class="flex-1/4">
						<h2 class="border-b-0 mt-4">
							Find us
						</h2>
						<address>
							CodeBase Edinburgh<br />
							37a Castle Terrace<br />
							Edinburgh EH1 2EL
							<br /><br />
							<em>Correspondence to</em><br />
							Prewired &incare; CodeBase<br />
							Argyle House<br />
							3 Lady Lawson Street<br />
							Edinburgh EH3 9DR
						</address>
					</div>
					<div class="flex-1/4 pt-4">
						<a
							href="https://www.oscr.org.uk/about-charities/search-the-register/charity-details?number=SC047780"
							target="_blank" rel="noopener"
						>
							<Image
								src={oscr}
								alt="The OSCR logo"
								class="w-48 rounded-sm"
							/>
						</a>
					</div>
				</div>
			</div>
			<div class="py-4 text-center text-white font-semibold">
				Prewired is a Scottish Charity, SC047780 &middot; &copy; 2025 Prewired
			</div>
		</footer>
	</body>
</html>

---
import { Image } from "astro:assets";
import "@fontsource-variable/open-sans";
import "@fontsource-variable/open-sans/wght-italic.css";
import "@fontsource-variable/geist-mono";
import "../styles/global.css";
import DialogCloseButton from "@components/DialogCloseButton.astro";
import prewiredLogoNoText from "@assets/logos/prewired-logo-no-text.png";
import prewiredLogoText from "@assets/logos/prewired-logo-text.png";
import oscr from "@assets/logos/oscr.jpg";
import codeclub from "@assets/logos/codeclub-logo.png";


interface Props {
	title: string;
}

const { title } = Astro.props;

const navItems = [
	{ href: "/news/", title: "News" },
	{ href: "/attending/", title: "Attending" },
	{ href: "/resources/", title: "Resources" },
	{ href: "/volunteering/", title: "Volunteering" },
	{ href: "/support/", title: "Support us" },
	{ href: "/about/", title: "About" },
	{ href: "/contact/", title: "Contact" },
];
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<!--<meta name="description" content="Astro description" />-->
		<meta name="generator" content={Astro.generator} />
		<title>{`${title} - Prewired`}</title>
	</head>
	<body class="text-lg bg-linear-[170deg,#EDFCFF,#FAF6FE_200px,#FFF0F3_400px,white_600px]">
		<header class="h-32 w-full max-w-screen-xl mx-auto py-4 px-4 xl:px-0 lg:pr-0 flex items-center">
			<!-- Responsive logo -->
			<a href="/" class="lg:max-xl:hidden mr-auto hover:opacity-70 transition">
				<Image
					src={prewiredLogoText}
					alt="The Prewired logo"
					class="w-auto h-20 pb-5"
				/>
			</a>
			<a href="/" class="hidden lg:max-xl:inline mr-auto hover:opacity-70 transition">
				<Image
					src={prewiredLogoNoText}
					alt="The Prewired logo"
					class="w-auto h-20 pb-5"
				/>
			</a>
			<!-- Small-screen menu button -->
			<button
				class="lg:hidden flex items-center px-4 py-2 bg-pink-500 hover:bg-pink-700 rounded-lg font-semibold text-white cursor-pointer transition"
				id="menu-open-btn"
			>
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="mt-0.5 mr-2 fill-white" viewBox="0 0 16 16">
					<path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/>
				</svg>
				Menu
			</button>
			<!-- Small-screen menu -->
			<dialog
				class="h-full max-h-full w-full sm:w-1/2 max-w-full sm:left-1/2 p-10 bg-pink-50 sm:border-l-2 sm:border-pink-500 translate-x-10 open:translate-x-0 starting:open:translate-x-10"
				id="menu-dialog"
			>
				<DialogCloseButton
					id="menu-dialog-close-btn"
					style="float-right clear-both"
				/>
				<nav class="flex flex-col items-center sm:items-start">
					<div class="mt-12 mb-8">
						<a href="/" class={`text-2xl text-black no-underline ${Astro.url.pathname === "/" ? "font-bold" : "hover:text-pink-700"}`}>
							Home
						</a>
					</div>
					{ navItems.map(({ href, title }) => (
						<div class="mb-8">
							<a href={href} class={`text-2xl text-black no-underline ${Astro.url.pathname === href ? "font-bold" : "hover:text-pink-700"}`}>
								{ title }
							</a>
						</div>
					))}
				</nav>
			</dialog>
			<!-- Large-screen menu -->
			<nav class="hidden lg:flex">
				{ navItems.map(({ href, title }) => (
					<a href={href} class={`ml-8 mr-4 font-medium text-black no-underline ${Astro.url.pathname === href ? "text-pink-700 border-b-2 border-pink-700" : "hover:text-pink-700"}`}>
						{ title }
					</a>
				))}
			</nav>
		</header>

		<main class="px-4">
			<slot />
		</main>

		<footer class="w-full mt-32 bg-purple-600 rounded-t-[0.625rem]">
			<div class="w-full pt-14 pb-8 px-4 sm:px-8 bg-purple-50 rounded-lg">
				<div class="w-full xl:max-w-screen-xl mx-auto mb-4 flex flex-wrap lg:justify-between gap-16">
					<div class="w-auto -mt-8 flex flex-col">
						<Image
							src={prewiredLogoText}
							alt="The Prewired logo"
							class="w-60 mb-8"
						/>
						<div class="flex flex-wrap lg:flex-col gap-4">
							<!-- Ko-fi widget -->
							<script is:inline type="text/javascript" src="https://storage.ko-fi.com/cdn/widget/Widget_2.js"></script>
							<script is:inline type="text/javascript">
								kofiwidget2.init("Support us on Ko-fi", "#FF246E", "S6S35YATV");
								kofiwidget2.draw();
							</script>
							<!-- End of Ko-fi widget -->
							<a
								href="http://eepurl.com/dv2dPb"
								target="_blank" rel="noopener"
								class="w-fit px-3.5 py-2.5 bg-purple-600 rounded-md cursor-pointer font-semibold text-sm text-white no-underline hover:border-transparent hover:bg-purple-800 active:bg-purple-500 transition"
							>
								Join our mailing list
							</a>
						</div>
						<hr class="hidden lg:block w-full mt-12 mb-12" />
						<div class="mt-8 lg:mt-0 flex gap-10">
							<!-- Facebook -->
							<a href="https://www.facebook.com/Prewired1" target="_blank" rel="noopener noreferrer">
								<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="fill-purple-600 hover:fill-purple-800 active:fill-purple-500 transition" viewBox="0 0 16 16">
									<path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951"/>
								</svg>
							</a>
							<!-- LinkedIn -->
							<a href="https://uk.linkedin.com/company/prewired" target="_blank" rel="noopener noreferrer">
								<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="fill-purple-600 hover:fill-purple-800 active:fill-purple-500 transition" viewBox="0 0 16 16">
									<path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"/>
								</svg>
							</a>
							<!-- GitHub -->
							<a href="https://github.com/prewired" target="_blank" rel="noopener noreferrer">
								<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="fill-purple-600 hover:fill-purple-800 active:fill-purple-500 transition" viewBox="0 0 16 16">
									<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
								</svg>
							</a>
						</div>
					</div>
					<div class="hidden xl:block">
						<h4>
							Find us
						</h4>
						<address class="text-base leading-7">
							CodeBase Edinburgh<br />
							37a Castle Terrace<br />
							Edinburgh EH1 2EL
							<br /><br />
							<em>Correspondence to</em><br />
							Prewired &incare; CodeBase<br />
							Argyle House<br />
							3 Lady Lawson Street<br />
							Edinburgh EH3 9DR
						</address>
					</div>
					<div class="">
						<h4>
							Policies
						</h4>
						<div class="flex flex-col text-base leading-7">
							<a href="/">Child protection</a>
							<a href="/">Equality, diversity, and inclusion</a>
							<a href="/">Privacy</a>
							<a href="/">Use of computing facilities</a>
						</div>
						<h4 class="mt-8">
							Access
						</h4>
						<div class="flex flex-col text-base leading-7">
							<a href="/docs/">Documents</a>
							<a href="/sitemap-0.xml">Sitemap</a>
						</div>
					</div>
					<div class="w-auto flex lg:flex-col gap-8 items-center justify-center">
						<a
							href="https://www.oscr.org.uk/about-charities/search-the-register/charity-details?number=SC047780"
							target="_blank" rel="noopener"
							class="hover:opacity-70 transition"
						>
							<Image
								src={oscr}
								alt="OSCR wordmark above the text 'Registered SCIO SC047780'"
								class="w-48 rounded-sm"
							/>
						</a>
						<a
							href="https://codeclub.org/en/clubs/49e8d3d4-e54e-417b-9bca-de5354d027f4"
							target="_blank" rel="noopener"
							class="hover:opacity-70 transition"
						>
							<Image
								src={codeclub}
								alt="CodeClub logo"
								class="w-36 rounded-sm"
							/>
						</a>
					</div>
				</div>
			</div>
			<div class="p-4 text-base text-center text-white font-mono font-semibold uppercase">
				Prewired is a Scottish Charity, SC047780 &middot; &copy; 2025 Prewired
			</div>
		</footer>

		<script>
			const menuOpenBtn = document.getElementById("menu-open-btn") as HTMLButtonElement;
			const menuDialog = document.getElementById("menu-dialog") as HTMLDialogElement;
			const menuCloseBtn = document.getElementById("menu-dialog-close-btn") as HTMLButtonElement;

			menuOpenBtn.addEventListener("click", () => {
				menuDialog.showModal();
			});

			menuCloseBtn.addEventListener("click", () => {
				menuDialog.close();
			});

			menuDialog.addEventListener("click", event => {
				// Close the dialog on tapping the backdrop
				if (event.target === menuDialog) menuDialog.close();
			});
		</script>
	</body>
</html>

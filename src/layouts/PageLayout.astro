---
import { Picture } from "astro:assets";
import BaseLayout from "./BaseLayout.astro";

interface Props {
	title: string;
	desc: string;
	coverImageData: ImageMetadata;
	coverImageAlt: string;
}

const { title, desc, coverImageData, coverImageAlt } = Astro.props;
---

<BaseLayout
	title={title}
	desc={desc}
	type="website"
	coverImageData={coverImageData}
	coverImageAlt={coverImageAlt}
>
	<div class="max-w-7xl mx-auto">
		<div class="relative w-[calc(100%+2rem)] md:w-full -mx-4 md:mx-0 md:rounded-lg bg-black overflow-hidden">
			<Picture priority
				src={coverImageData}
				formats={["avif", "webp"]}
				alt={coverImageAlt}
				class="h-60 xl:h-72 object-cover mask-b-from-50%"
			/>
			<div class="max-w-5xl mx-auto px-4">
				<div class="absolute bottom-1 md:bottom-2">
					<h1 class="lg:text-5xl text-white text-shadow-lg/50">
						{ title }
					</h1>
				</div>
			</div>
		</div>
		<div class="min-h-[40vh] w-full max-w-5xl mx-auto sm:px-4 pt-8 md:pt-12">
			<slot />
		</div>
	</div>
</BaseLayout>

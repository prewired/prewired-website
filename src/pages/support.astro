---
import PageLayout from "@layouts/PageLayout.astro";
import coverPhoto from "@assets/photos/sh19_lanyards.jpg";
---

<PageLayout
	title="Support us"
	imgSrc={coverPhoto}
	imgAlt="Lanyards"
>
	<section class="flex max-w-screen-xl">
		<div class="grow">
			<p>
				Hello! Please support us!
			</p>
		</div>
		<div class="shrink-0">
			{/*!-- Donation widget */}
			<iframe
				src="https://ko-fi.com/prewired/?hidefeed=true&widget=true&embed=true&preview=true"
				id="kofiframe"
				height="712"
				class="w-[450px] max-w-full"
				title="prewired"
			>
			</iframe>
		</div>
	</section>

</PageLayout>

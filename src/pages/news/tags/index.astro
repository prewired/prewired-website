---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import coverPhoto from "@assets/photos/sh18_live.jpg";


const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map(post => post.data.tags).flat())];
---

<PageLayout
	title="All tags"
	desc="All tags used by the Prewired blog"
	imgSrc={coverPhoto}
	imgAlt="A computer screen with the text 'Prewired Presentations begin 13:00 Friday 27th July 2018'"
>
	{ tags.map(tag => (
		<p>
			<a
				href={`/news/tags/${tag}/`}
				class="font-mono font-medium uppercase text-black no-underline bg-blue-200 hover:bg-purple-200 rounded px-2 py-1 leading-0"
			>
				{ tag }
			</a>
		</p>
	)) }
</PageLayout>
